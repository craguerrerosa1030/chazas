# ===========================================
# Configuracion de Chazas Backend
# Copia este archivo a .env y completa los valores
# ===========================================

# Configuracion de la aplicacion
APP_NAME=Chazas API
DEBUG=True
API_VERSION=v1

# Base de datos PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/nombre_db
DATABASE_URL=postgresql://postgres:TU_PASSWORD@localhost:5432/chazas

# Seguridad JWT
# IMPORTANTE: Genera una clave secreta segura para produccion
# Puedes usar: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=genera_una_clave_secreta_segura_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - Origenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Puerto del servidor
PORT=8000

# Configuracion SMTP para verificacion de email
# Para Gmail: crear App Password en https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password_de_gmail
SMTP_FROM_NAME=Chazas
VERIFICATION_CODE_EXPIRE_MINUTES=15

# Cloudinary - Almacenamiento de imagenes en la nube
# Crear cuenta gratis en https://cloudinary.com
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret
